<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newPost_FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:background="#EDE7F6 "
    tools:context=".newPostFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/newPost_next_frameLayout"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="#C5CAE9 "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/newPost_Next_button"
                    android:layout_width="200dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="#512DA8   "
                    android:enabled="false"
                    android:text="Next"
                    android:textColor="#B39DDB "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <ScrollView
            android:id="@+id/newPost_content_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/newPost_next_frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingTop="16dp">


                <ImageView
                    android:id="@+id/newPost_cover_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_image_black_48"
                    android:visibility="gone" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/newPost_titletext_EditText"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:hint="Write the post title here"
                        android:singleLine="true"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/newPost_Title_textView" />

                    <TextView
                        android:id="@+id/newPost_Title_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="32dp"
                        android:text="Title:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/newPost_titletext_EditText"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:padding="2dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/newPost_image1_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_image2_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_image3_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/newPost_image4_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_image5_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_image6_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_image7_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_image8_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_image9_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />


                        <ImageButton
                            android:id="@+id/newPost_addPic_imageButton"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="#00FFFFFF"
                            android:scaleType="fitCenter"
                            android:src="@drawable/newpic_button" />

                        <ImageView
                            android:id="@+id/newPost_blank1_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/newPost_blank2_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_blank3_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/newPost_blank4_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview" />

                        <ImageView
                            android:id="@+id/newPost_blank5_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview" />

                        <ImageView
                            android:id="@+id/newPost_blank6_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview" />

                        <ImageView
                            android:id="@+id/newPost_blank7_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview" />

                        <ImageView
                            android:id="@+id/newPost_blank8_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview" />

                        <ImageView
                            android:id="@+id/newPost_blank9_imageView"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:src="@drawable/pic_preview" />

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>