<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newPost_FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6 "
    tools:context=".newPostFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/newPost_next_frameLayout"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="#C5CAE9 "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/newPost_Next_button"
                    android:layout_width="200dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="#512DA8   "
                    android:enabled="false"
                    android:text="Next"
                    android:textColor="#B39DDB "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <ScrollView
            android:id="@+id/newPost_content_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/newPost_next_frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="64dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                            app:layout_constraintStart_toEndOf="@+id/linearLayout2">

                            <ImageButton
                                android:id="@+id/newPost_gallery_imageButton"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:backgroundTint="#512DA8"
                                android:baselineAlignBottom="true"
                                android:src="@drawable/baseline_add_photo_alternate_black_48"
                                android:tint="#B39DDB"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/newPost_gallery_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="34dp"
                                android:text="Gallery"
                                android:textColor="#B39DDB"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageButton
                                android:id="@+id/newPost_camera_imageButton"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:backgroundTint="#512DA8"
                                android:baselineAlignBottom="true"
                                android:src="@drawable/baseline_add_a_photo_black_48"
                                android:tint="#B39DDB"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/newPost_camera_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="34dp"
                                android:text="Camera"
                                android:textColor="#B39DDB"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animationCache="true"
                        android:background="#D1C4E9 "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:backgroundTint="#E0E0E0">

                            <ImageView
                                android:id="@+id/newPost_image1_imageView"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="#9E9E9E"
                                android:baselineAlignBottom="true"
                                android:scaleType="center"
                                android:src="@drawable/baseline_image_black_48"
                                android:tint="#E0E0E0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/newPost_image2_imageView"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="#9E9E9E"
                                android:baselineAlignBottom="true"
                                android:src="@drawable/baseline_image_black_48"
                                android:tint="#E0E0E0"
                                app:layout_constraintBaseline_toBaselineOf="@+id/newPost_image1_imageView"
                                app:layout_constraintStart_toEndOf="@+id/newPost_image1_imageView" />

                            <ImageView
                                android:id="@+id/newPost_image3_imageView"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="#9E9E9E"
                                android:baselineAlignBottom="true"
                                android:src="@drawable/baseline_image_black_48"
                                android:tint="#E0E0E0"
                                app:layout_constraintBaseline_toBaselineOf="@+id/newPost_image2_imageView"
                                app:layout_constraintStart_toEndOf="@+id/newPost_image2_imageView" />

                            <ImageView
                                android:id="@+id/newPost_image4_imageView"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="#9E9E9E"
                                android:baselineAlignBottom="true"
                                android:src="@drawable/baseline_image_black_48"
                                android:tint="#E0E0E0"
                                app:layout_constraintBaseline_toBaselineOf="@+id/newPost_image3_imageView"
                                app:layout_constraintStart_toEndOf="@+id/newPost_image3_imageView" />

                            <ImageView
                                android:id="@+id/newPost_image5_imageView"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="#9E9E9E"
                                android:baselineAlignBottom="true"
                                android:src="@drawable/baseline_image_black_48"
                                android:tint="#E0E0E0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/newPost_image1_imageView" />

                            <ImageView
                                android:id="@+id/newPost_image6_imageView"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="#9E9E9E"
                                android:baselineAlignBottom="true"
                                android:src="@drawable/baseline_image_black_48"
                                android:tint="#E0E0E0"
                                app:layout_constraintStart_toEndOf="@+id/newPost_image5_imageView"
                                app:layout_constraintTop_toBottomOf="@+id/newPost_image1_imageView" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/newPost_titletext_EditText"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:hint="Write the post title here"
                        android:singleLine="true"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/newPost_Title_textView" />

                    <TextView
                        android:id="@+id/newPost_Title_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="32dp"
                        android:text="Title:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/newPost_titletext_EditText"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
